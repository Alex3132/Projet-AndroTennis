<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">

        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:textColor">#cfffffff</item>
        <item name="android:layout_margin">10dp</item>

        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>

    </style>

    <style name="intro_text_style">
        
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">italic</item>

        <item name="android:background">@drawable/simple_text</item>

    </style>

    <style name="other_text_style">

        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">serif</item>
       <!-- <item name="android:background">@drawable/simple_text</item>-->
    </style>

</resources>
